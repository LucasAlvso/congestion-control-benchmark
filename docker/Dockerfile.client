FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod ./
COPY src/ ./src/
RUN go mod download
RUN go build -o client ./src/client

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/

COPY --from=builder /app/client .

# Create directories
RUN mkdir -p logs test-files

CMD ["./client", "--host=server", "--port=8080", "--log-dir=./logs"]
